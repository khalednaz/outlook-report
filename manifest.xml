<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
          xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0"
          xsi:type="MailApp">

  <Id>96726257-12df-4ef1-b166-e35f5188b87a</Id>
  <Version>1.0.0.1</Version>
  <ProviderName>Brixeon</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="Brixeon Report Phishing"/>
  <Description DefaultValue="Report suspicious emails to Brixeon and register a Reported event (RID-based)."/>

  <IconUrl DefaultValue="https://brixeon.com/outlook-addin/assets/icon-32.png"/>
  <HighResolutionIconUrl DefaultValue="https://brixeon.com/outlook-addin/assets/icon-128.png"/>

  <SupportUrl DefaultValue="https://brixeon.com/"/>

  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.8"/>
    </Sets>
  </Requirements>

  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://brixeon.com/outlook-addin/taskpane.html"/>
        <RequestedHeight>260</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <Permissions>ReadItem</Permissions>

  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
  </Rule>

  <DisableEntityHighlighting>false</DisableEntityHighlighting>

  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides"
                    xsi:type="VersionOverridesV1_0">
    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>

          <FunctionFile resid="residCommandsUrl"/>

          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="grpBrixeon">
                <Label resid="residGroupLabel"/>
                <Control xsi:type="Button" id="btnReportPhish">
                  <Label resid="residBtnLabel"/>
                  <Supertip>
                    <Title resid="residBtnLabel"/>
                    <Description resid="residBtnDesc"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="residIcon16"/>
                    <bt:Image size="32" resid="residIcon32"/>
                    <bt:Image size="80" resid="residIcon80"/>
                  </Icon>
                  <Action xsi:type="ExecuteFunction">
                    <FunctionName>reportPhish</FunctionName>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>

        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>
      <bt:Images>
        <bt:Image id="residIcon16" DefaultValue="https://brixeon.com/outlook-addin/assets/icon-16.png"/>
        <bt:Image id="residIcon32" DefaultValue="https://brixeon.com/outlook-addin/assets/icon-32.png"/>
        <bt:Image id="residIcon80" DefaultValue="https://brixeon.com/outlook-addin/assets/icon-80.png"/>
      </bt:Images>

      <bt:Urls>
        <bt:Url id="residCommandsUrl" DefaultValue="https://brixeon.com/outlook-addin/commands.html"/>
        <bt:Url id="residTaskpaneUrl" DefaultValue="https://brixeon.com/outlook-addin/taskpane.html"/>
      </bt:Urls>

      <bt:ShortStrings>
        <bt:String id="residGroupLabel" DefaultValue="Brixeon"/>
        <bt:String id="residBtnLabel" DefaultValue="Report Phishing"/>
      </bt:ShortStrings>

      <bt:LongStrings>
        <bt:String id="residBtnDesc" DefaultValue="Report this email to your security team and register a Reported event (RID-based)."/>
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>
